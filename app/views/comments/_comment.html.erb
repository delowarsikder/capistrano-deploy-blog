<div class="m-1">
  <h3>Comments :</h3>
  <%@showArticle.comments.each do |comment|%>
    <div class="card boder:none p-2">
      <% unless comment.archived? %>
        <p>
          <strong>Commenter:</strong>
          <%=comment.commenter%>
        </p>
        <p>
          <strong>Comment: </strong>
          <%=comment.body%>
        </p>
        <p>
          <%= button_to "Delete", [comment.article,comment], method: :delete ,data: { turbo_confirm: 'Are you sfda fsure?' },class:"btn btn-danger"%>
        </p>
      <%end%>
    </div>
  <%end%>
</div>
