<div class="m-1">
  <h3>Comments :</h3>
  <%@showArticle.comments.each do |comment|%>
    <% if comment.public? %>
      <div class="card boder:none mt-1 p-1">
        <p>
          <strong>Commenter:</strong>
          <%=comment.commenter%>
        </p>
        <p>
          <strong>Comment: </strong>
          <%=comment.body%>
        </p>
        <p>
          <%= button_to "Delete", [comment.article,comment], method: :delete ,data: { turbo_confirm: 'Are you sfda fsure?' },class:"btn btn-danger"%>
        </p>
      </div>
    <%end%>
  <%end%>
</div>
